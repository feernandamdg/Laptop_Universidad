	where primer_apellido in ('Cruz', 'Martinez', 'Sanchez', '..' ) --en este solo se evalua una vez la lista

	-- Ahora busqueda 
	select id_usuario, concat (nombre, ' ',primer_apellido,' ',
		segundo_apellido) as Nombre_completo
	from usuarios 
	where id-usuario => 10 and id-usuario<= 15
	-- between corta de entrada los elementos y los arroja, es más eficiente
		id-usuario between 10 and 15
		from usuarios limit 5 -- 

-- PARA EL USO DE CADENAR SE USA LENGHT, POSITION, REPEAT... cada uno de estos tiene particularidades para definir, obtener información etc. 
	select length(
		concat(nombre, ' ',primer_apellido,' ',
		segundo_apellido)) as Nombre_completo
	from usuarios limit 5

	select UPPER( --puede ser LOWE (minusculas)
		concat(nombre, ' ',primer_apellido,' ',
		segundo_apellido)) as Nombre_completo
	from usuarios limit 5

	select 
		concat(nombre, ' ',primer_apellido,' ',
		segundo_apellido),

		left(
		concat(nombre, ' ', primer_apellido,
		segundo_apellido ), 5) as Nombre_completo,
			right(
			concat(nombre, ' ', primer_apellido,' ',
			segundo_apellido ), 5)) as Nombre_completo1

	from usuarios limit 5

-- ltrim funcion y rtril
	ltrim(
